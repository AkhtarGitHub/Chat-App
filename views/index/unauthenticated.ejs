<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to Real-Time Chat</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="main-content">
      <h1>Welcome to Real-Time Chat</h1>
      <p>Connect with others in real-time. Login or sign up to get started!</p>
      <div class="button-container">
        <a href="/login" class="action-button">Login</a>
        <a href="/signup" class="action-button">Sign Up</a>
      </div>
      <p style="margin-top: 20px">
        Currently Online Users: <span id="online-users">0</span>
      </p>
    </div>
    <script>
      // WebSocket connection to get the number of online users
      const webSocket = new WebSocket("ws://localhost:3000/ws");

      webSocket.addEventListener("message", (event) => {
        const data = JSON.parse(event.data);
        if (data.type === "online-users") {
          document.getElementById("online-users").innerText = data.count;
        }
      });
    </script>
  </body>
</html>
